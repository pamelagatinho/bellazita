<%= form_for(@client) do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2> <%= t 'general.form_error'%> </h2>
    </div>
  <% end %>
  
      
  <div class="control-group">
    <%= f.label :name , :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, class: "text-field" %>
      <%= error_tag @client, :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :phone_number , :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone_number, class: "text-field" %>
      <%= error_tag @client, :phone_number %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email , :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, class: "text-field" %>
      <%= error_tag @client, :email %>
    </div>
  </div>
  

  <div class="control-group">
    <%= f.label :birthday , :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :birthday, class: "text-field" %>
      <%= error_tag @client, :birthday %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Salvar", class: "btn btn-default, btn-primary"%>
    <%= link_to t('links.cancel'), clients_path , class: "btn btn-default"%>
  </div>

<% end %>
