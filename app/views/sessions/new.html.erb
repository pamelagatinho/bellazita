<div class="row-fluid">
  <div class="span4"></div>
  <div class="span4">

<fieldset>
    <legend>Entrar</legend>
    
    <%= form_tag sessions_path , class: "form-signin" do %>
      <div class="field">
        <%= email_field_tag :email, params[:email] , class: "input-block-level" ,placeholder: "Digite seu Email" %>
      </div>
      <div class="field">
        <%= password_field_tag :password , params[:password], class: "input-block-level" , placeholder: "Digite sua senha" %>
      </div>
      
      <div class="actions"><%= submit_tag "Login" ,class: "btn btn-default btn-block"%></div>
    <% end %>
</fieldset>

  </div>

</div>